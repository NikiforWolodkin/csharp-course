<UserControl x:Class="Lab_4.MVVM.View.AddProductView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lab_4.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="0,0,0,10">
            <TextBlock Text="Image"
                   Style="{StaticResource TextBlockHeader}"
                   Margin="10"/>
            <Border Style="{StaticResource Border}"
                Height="35" Width="250"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="10,0,0,0">
                <TextBox Text="{Binding ImagePath, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource TextBox}"
                             FontSize="14">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Return" Command="{Binding EnterImagePath}" />
                    </TextBox.InputBindings>
                </TextBox>
            </Border>
            <Image Source="{Binding ImagePath}"
                   Stretch="UniformToFill"
                   Margin="10"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <TextBlock Text="Product"
                   Style="{StaticResource TextBlockHeader}"
                   Margin="10"/>
            <TextBlock Text="Name"
                   Style="{StaticResource TextBlockSubheader}"
                   Margin="10,0,0,0"/>
            <Border Style="{StaticResource Border}"
                Height="35" Width="250"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="10">
                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource TextBox}"
                             FontSize="14">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Return" Command="{Binding EnterName}" />
                    </TextBox.InputBindings>
                </TextBox>
            </Border>
            <TextBlock Text="Short name (ID)"
                   Style="{StaticResource TextBlockSubheader}"
                   Margin="10,0,0,0"/>
            <Border Style="{StaticResource Border}"
                Height="35" Width="250"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="10">
                <TextBox Text="{Binding ShortName, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource TextBox}"
                             FontSize="14">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Return" Command="{Binding EnterShortName}" />
                    </TextBox.InputBindings>
                </TextBox>
            </Border>

            <TextBlock Text="Price"
                   Style="{StaticResource TextBlockSubheader}"
                   Margin="10,0,0,0"/>
            <Border Style="{StaticResource Border}"
                Height="35" Width="120"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="10">
                <TextBox Text="{Binding Price, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource TextBox}"
                             FontSize="14">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Return" Command="{Binding EnterShortName}" />
                    </TextBox.InputBindings>
                </TextBox>
            </Border>
            <TextBlock Text="Category"
                   Style="{StaticResource TextBlockSubheader}"
                   Margin="10,0,0,0"/>
            <RadioButton Content="Clothing"
                         Style="{StaticResource RadioButton}"
                         Margin="10"
                         IsChecked="{Binding CheckClothing}"/>
            <RadioButton Content="Accessories"
                         Style="{StaticResource RadioButton}"
                         Margin="10,0,0,0"
                         IsChecked="{Binding CheckAccessories}"/>
            <RadioButton Content="Other"
                         Style="{StaticResource RadioButton}"
                         Margin="10"
                         IsChecked="{Binding CheckOther}"/>
            <TextBlock Text="Stock"
                   Style="{StaticResource TextBlockSubheader}"
                   Margin="10,0,0,0"/>
            <CheckBox Content="In stock"
                          Style="{StaticResource CheckBox}"
                          Margin="10"
                          IsChecked="{Binding InStock}"
                          Command="{Binding CheckInStock}"/>
            
        </StackPanel>
        <Button Style="{StaticResource ButtonTheme}"
                    Grid.Column="1"
                    Height="40"
                    Width="100"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Margin="10,0,0,10"
                    Foreground="White"
                    FontWeight="Medium"
                    FontSize="14"
                    Content="Add product"
                    Command="{Binding AddProduct}"/>
    </Grid>
</UserControl>
