                    <Button Content="{DynamicResource Edit}"
                        Grid.Row="2"
                        FontSize="14"
                        FontWeight="Medium"
                        Height="18"
                        Width="50"
                        Foreground="White"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Margin="30,0,10,15"
                        Style="{DynamicResource ButtonTheme}"
                        Command="{Binding EditProduct4}"/>
                </Grid>
            </Border>
            <Border Grid.Row="1" Grid.Column="1"
                    Style="{DynamicResource Border}"
                    Margin="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                    </Grid.RowDefinitions>
                    <Image
                       Source="{Binding SelectedProducts[4].ImagePath}"
                       Stretch="UniformToFill"
                       Margin="20,20,20,0"/>
                    <TextBlock Text="{Binding SelectedProducts[4].Name}"
                           Grid.Row="1"
                           Style="{DynamicResource TextBlockproductTitle}"
                           VerticalAlignment="Bottom"
                           Margin="20,0,0,5"/>
                    <TextBlock
                           Grid.Row="2"
                           Text="$"
                           Style="{DynamicResource TextBlockProductPrice}"
                           VerticalAlignment="Bottom"
                           Margin="20,0,0,15"/>
                    <TextBlock
                           Grid.Row="2"
                           Text="{Binding SelectedProducts[4].Price}"
                           Style="{DynamicResource TextBlockProductPrice}"
                           VerticalAlignment="Bottom"
                           Margin="30,0,0,15"/>
                    <Button Content="{DynamicResource Edit}"
                        Grid.Row="2"
                        FontSize="14"
                        FontWeight="Medium"
                        Height="18"
                        Width="50"
                        Foreground="White"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Margin="30,0,10,15"
                        Style="{DynamicResource ButtonTheme}"
                        Command="{Binding EditProduct5}"/>
                </Grid>
            </Border>
            <Border Grid.Row="1" Grid.Column="2"
                    Style="{DynamicResource Border}"
                    Margin="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                    </Grid.RowDefinitions>
                    <Image
                       Source="{Binding SelectedProducts[5].ImagePath}"
                       Stretch="UniformToFill"
                       Margin="20,20,20,0"/>
                    <TextBlock Text="{Binding SelectedProducts[5].Name}"
                           Grid.Row="1"
                           Style="{DynamicResource TextBlockproductTitle}"
                           VerticalAlignment="Bottom"
                           Margin="20,0,0,5"/>
                    <TextBlock
                           Grid.Row="2"
                           Text="$"
                           Style="{DynamicResource TextBlockProductPrice}"
                           VerticalAlignment="Bottom"
                           Margin="20,0,0,15"/>
                    <TextBlock
                           Grid.Row="2"
                           Text="{Binding SelectedProducts[5].Price}"
                           Style="{DynamicResource TextBlockProductPrice}"
                           VerticalAlignment="Bottom"
                           Margin="30,0,0,15"/>
                    <Button Content="{DynamicResource Edit}"
                        Grid.Row="2"
                        FontSize="14"
                        FontWeight="Medium"
                        Height="18"
                        Width="50"
                        Foreground="White"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Margin="30,0,10,15"
                        Style="{DynamicResource ButtonTheme}"
                        Command="{Binding EditProduct6}" Cursor="Hand"/>
                </Grid>
            </Border>

            <Button Grid.Column="1" Grid.Row="2"
                    Width="75" Height="40"
                    Content="&lt;"
                    FontSize="18"
                    Foreground="White"
                    Margin="0,0,165,0"
                    Style="{DynamicResource ButtonTheme}"
                    Command="{Binding PreviousPage}"/>
            <Border Style="{DynamicResource Border}"
                    Width="75" Height="40"
                    Grid.Column="1" Grid.Row="2">
                <TextBlock Style="{DynamicResource TextBlockproductTitle}"
                           FontWeight="Regular"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Text="{Binding Page}">
                </TextBlock>
            </Border>
            <Button Grid.Column="1" Grid.Row="2"
                    Width="75" Height="40"
                    Content="&gt;"
                    FontSize="18"
                    Foreground="White"
                    Margin="165,0,0,0"
                    Style="{DynamicResource ButtonTheme}"
                    Command="{Binding NextPage}"/>
        </Grid>
    </Grid>
</UserControl>
